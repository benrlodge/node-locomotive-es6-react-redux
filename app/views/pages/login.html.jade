extends ../layouts/public_layout

block content
  .row-container
    .row
      .col-md-12
        h1.text-center Login
        if messages.info.length > 0
          .alert.alert-info.block-roomy
            | #{messages.info}
        form(action='/user/login', method='GET')
          .form-group
            label(for='email') Email address
            input#username.form-control(name='username', type='email', placeholder='Email' autofocus)
          .form-group
            label(for='password') Password
            input#password.form-control(name='password', type='password', placeholder='Password')
          button.btn.btn-default(type='submit') Submit
          
          if messages.error.length > 0
            .alert.alert-danger.block-roomy
              | #{messages.error}
